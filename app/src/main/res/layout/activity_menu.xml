<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#454547"
    tools:context=".Menu">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/Salir"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#F48991"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="-1dp"
            android:text="  Salir"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="593dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="-50dp"
            app:srcCompat="@drawable/splash"
            tools:layout_editor_absoluteX="-11dp"
            tools:layout_editor_absoluteY="-34dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="152dp"
            android:layout_height="51dp"
            android:layout_marginTop="-60dp"
            android:fontFamily="@font/frijole"
            android:text="ARCANE"
            android:textColor="@color/white"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="150dp" />

        <Button
            android:id="@+id/Jugar"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/btnjugar"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="-8dp"
            android:text="JUGAR"
            android:textColor="#454547"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="593dp" />

        <Button
            android:id="@+id/ComoJugar"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/btntutorial"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="-1dp"
            android:text="TUTORIAL"
            android:textColor="#454547"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="593dp" />

        <Button
            android:id="@+id/Tienda"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/btntienda"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="-1dp"
            android:text="TIENDA"
            android:textColor="#454547"
            android:textSize="20sp"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="593dp" />

        <Button
            android:id="@+id/Inventario"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/btninventario"
            android:fontFamily="@font/alfa_slab_one"
            android:paddingLeft="-1dp"
            android:text="INVENTARIO"
            android:textColor="#454547"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="593dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="117dp"
                android:layout_height="169dp"
                app:srcCompat="@drawable/imagen1"
                tools:layout_editor_absoluteX="197dp"
                tools:layout_editor_absoluteY="1000dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="121dp"
                android:layout_height="163dp"
                app:srcCompat="@drawable/imagen2"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="542dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="86dp"
                android:layout_height="168dp"
                app:srcCompat="@drawable/imagen4"
                tools:layout_editor_absoluteX="305dp"
                tools:layout_editor_absoluteY="540dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="119dp"
                android:layout_height="167dp"
                app:srcCompat="@drawable/imagen3"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="540dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>